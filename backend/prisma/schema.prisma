generator client {
  provider = "prisma-client"
    output   = "../src/generated"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  uid String @unique
  name String 
  email String @unique
  createdAt DateTime @default(now())
  lastLogin DateTime
}

model Event {
  id Int @id @default(autoincrement())
  question String
  closesAt DateTime
  status Int
  amountTraded Decimal
  totalTraded Int
  outCome Int
  yesPrice Decimal
  noPrice Decimal
}

model Orders {
  id Int @id @default(autoincrement()) 
  eventId Int
  userId Int 
  side String
  price Decimal
  amount Decimal
  createdAt DateTime
}

model Balance {
  id Int @id @default(autoincrement()) 
  userId Int @unique
  balance Decimal
  lockedBalance Decimal
  updatedAt DateTime
}